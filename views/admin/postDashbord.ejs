<%- include('../layouts/admin-header.ejs') %>

    <!-- Page Content  -->
    <div id="content" class="p-4 p-md-5 pt-5">
        <h2 class="mb-4">Add post</h2>
        <div class="container">
            <form action="" method="post">
                <div class="row mt-4">
                    <div class="col-sm-10">
                        <h5>Title</h5>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-sm-10">
                        <input type="text" name="title" placeholder="Enter title" required class="w-100">
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-sm-10">
                        <textarea name="content" cols="100" rows="10" placeholder="Enter content" required class="w-100"></textarea>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-sm-10">
                        <input type="submit" value="Add Post" class="btn btn-success w-100">
                    </div>
                </div>
            </form>
        </div>
        <%
        if(typeof message !== 'undefined'){
            %>
            <p style="color: green;"> <%= message %> </p>
            <%
        }
        %>
    </div>

    <%- include('../layouts/admin-footer.ejs') %>