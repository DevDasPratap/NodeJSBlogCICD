<%- include('./layouts/header.ejs') %>
<div class="container">
    <h1>Blog Setup</h1>
    <form action="" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-sm-20">
                <input type="text" name="blog_title" placeholder="Enter blog title" required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-20">
                <input type="file" name="blog_image" required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-20">
                <textarea name="description" cols="40" rows="4" placeholder="Enter blog description"></textarea>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-20">
                <input type="text" name="admin_name" placeholder="Enter admin name" required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-20">
                <input type="email" name="email" placeholder="Enter admin email" required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-20">
                <input type="password" name="password" placeholder="Enter admin password" required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-20">
                <input class="btn btn-primary" type="submit" value="Blog Setup">
            </div>
        </div>
    </form>
</div>
<% 
if(typeof message !== 'undefined'){
    %>
    <p style="color: red;"> <%= message %> </p>
    <%
}
%>
